<Postinfo_pg>:
	name: 'postinfo'
	RelativeLayout:
		canvas:
			Color:
				rgba: postinfo_color
			Rectangle:
				size: self.size
				pos: self.pos

		Label:
			canvas:
				Color:
					rgba: input_background
				Line:
					width: 1.5
					points: 0, screen_h*.89, screen_w, screen_h*.892

		Image:
			id: post_detail
			source: "drawable/socialmedia_pg/post_detail.png"
			pos_hint: {'center_x':.5, 'center_y':.5}	
			allow_stretch: False
			size_hint_x: 1

		Image:
			id: dog_forum
			source: "drawable/socialmedia_pg/dog_forum.png"
			pos_hint: {'center_x':.5, 'center_y':.5}	
			allow_stretch: False
			size_hint_x: 0

# scroll to top btn ---------------------------------------------------
		Button:
			id: scrolltop
			background_normal: 'drawable/socialmedia_pg/title_txt.png'
			background_down: 'drawable/socialmedia_pg/title_txt.png'
			background_disabled_normal: 'drawable/none.png'
			pos_hint: {'center_x':.5, 'center_y':.925}
			allow_stretch: False
			size: 250, 64
			size_hint: None, None

# back btn ------------------------------------------------------------	
		Button:
			id: menu
			background_normal: 'drawable/function_btn/back.png'
			background_down: 'drawable/function_btn/back.png'
			pos_hint: {'center_x':.1, 'center_y':.925}
			allow_stretch: False
			size: 60, 60
			size_hint: None, None
			on_release:
				app.root.current = 'socialmedia'
# bottom change screen btn --------------------------------------------
		BoxLayout:
			size_hint: None,None
			pos_hint: {'center_x':.5, 'center_y': .036}
			orientation: 'horizontal'
			size: (self.parent.width, 100)
			spacing: 100
			padding: [90,0,0,0]
			canvas:
				Color:
					rgba: btn_pink
				Rectangle:
					size: self.size
					pos: self.pos
	
			Button:
				background_normal: 'drawable/socialmedia_pg/home_btn.png'
				background_down: 'drawable/socialmedia_pg/home_btn.png'
				size: 40, 37
				pos_hint: {'center_x':.5, 'center_y':0.5}
				size_hint: None, None
				on_release: 
					app.root.current = 'socialmedia'
			Button:
				background_normal: 'drawable/socialmedia_pg/function_btn.png'
				background_down: 'drawable/socialmedia_pg/function_btn'
				size: 40, 40
				pos_hint: {'center_x':.5, 'center_y':0.5}
				size_hint: None, None
				on_release: 
					app.root.current = 'drone'
			Button:
				background_normal: 'drawable/socialmedia_pg/notice_btn.png'
				background_down: 'drawable/socialmedia_pg/notice_btn'
				size: 40, 40
				pos_hint: {'center_x':.5, 'center_y':0.5}
				size_hint: None, None
				on_release: app.root.current = 'list'
			Button:
				background_normal: 'drawable/socialmedia_pg/chat_btn.png'
				background_down: 'drawable/socialmedia_pg/chat_btn'
				size: 40, 40
				pos_hint: {'center_x':.5, 'center_y':0.5}
				size_hint: None, None
				on_release: 
					app.root.current = 'notification'

		Button:
			background_normal: 'drawable/none.png'
			background_down: 'drawable/none.png'
			background_disabled_normal: 'drawable/none.png'
			pos_hint: {'center_x':.9, 'center_y':.85}
			allow_stretch: False
			size: 250, 64
			size_hint: None, None
			on_release: 
				root.ids.scrolltop.disabled = True
				root.ids.post_detail.size_hint_x = 0
				root.ids.dog_forum.size_hint_x = 1










