<Verifyrepwd_pg>:
	name: 'verrifyrepwd'
	RelativeLayout:
		canvas:
			Color:
				rgba: verifyrepwd_color
			Rectangle:
				size: self.size
				pos: self.pos

		Button:
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1
				RoundedRectangle:
					radius: [10]
					pos: self.pos
					size: self.size
			background_normal: 'drawable/none.png'
			background_down: 'drawable/none.png'
			text: '恢復密碼'
			color: btn_upperleft
			font_size: 58
			font_name: font_bold
			size_hint: None, None
			size: (160, 60)
			pos_hint: {'center_x':.38, 'center_y':.9}
	
		Button:
			background_normal: 'drawable/function_btn/back.png'
			background_down: 'drawable/function_btn/back.png'
			pos_hint: {'center_x':.11, 'center_y':.9}
			allow_stretch: False
			size: 60, 60
			size_hint: None, None
			
		Label:
			pos_hint: {'center_x':.4, 'center_y':.825}
			markup: True
			text: "恢復代碼已發送到您的短訊中。\n代碼過期時間為 120s。"
			font_size: 25
			font_name: font_regular
			color: btn_upperleft

