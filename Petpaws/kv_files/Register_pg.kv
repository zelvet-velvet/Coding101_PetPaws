<Register_pg>:
	name: 'register'
	RelativeLayout:
		canvas:
			Color:
				rgba: register_color
			Rectangle:
				size: self.size
				pos: self.pos
	
# back btn ------------------------------------------------------------
		Button:
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1
				RoundedRectangle:
					radius: [10]
					pos: self.pos
					size: self.size
			background_normal: 'drawable/none.png'
			background_down: 'drawable/none.png'
			text: '註冊'
			color: btn_upperleft
			font_size: 58
